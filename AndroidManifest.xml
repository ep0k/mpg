<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.nickhs.testopenxc"
        android:versionCode="1"
        android:versionName="1.0"
        android:installLocation="preferExternal" >

    <uses-sdk android:minSdkVersion="12" />

    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:debuggable="true">
        <activity
                android:name=".OpenXCTestActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ShowSettingsActivity" />
        <activity android:name=".MileageActivity" />
        <activity android:name=".OverviewActivity" />

        <service android:name="com.openxc.VehicleService"/>
    </application>

</manifest>
